@model IList<WPS.WPSService.HRMS_EmployeeMst_TR>
@{
    ViewBag.Title = "EmployeeIndex";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript">
    function fancyitEmployee(codeval) {
        var url = '@Url.Action("Employee", "Employee", new { q = Request.QueryString["q"].ToString() })&Code=' + codeval + '';
        window.location = url;
    }

    function deleteEmployee(codeval) {
        jQuery.ajax({
            url: '@Url.Action("DeleteEmployee", "Employee", new { q = Request.QueryString["q"] })',
            type: "POST",
            data: { code: codeval },
            success: function (response) {
                if (response.success === true) {
                    var newUrl = '/Employee/EmployeeIndex?q=@Request.QueryString["q"].ToString()&message=' + response.response;
                    window.location = newUrl;
                } else if (response.success === false) {
                    $('#lblerrorMessage').html(response.response);
                    $('#diverrorMessage').show();

                }

            }
        });
    }

    function DeleteRecord(ID) {
        $('#delete').click(function () {
            deleteEmployee(ID);
        });
    }
</script>
<div class="container-fluid">
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-header">
                    <a href="#"><i class="fas fa-home"></i></a> / <a href="#"><i class="fas fa-user-circle"></i></a> / Employee
                </div>
                <div class="card-body">
                    <div class="card-title">
                        <h3 class="text-left title-2">
                            Employee
                            <div class="pull-right">
                                <button type="button" class="btn btn-primary btn-sm" onclick="fancyitEmployee('0')">
                                    <i class="fa fa-plus"></i> Add Employee
                                </button>
                            </div>
                        </h3>

                    </div>
                    <hr>
                    <div class="box-content alerts">
                        <div class="alert alert-danger" id="diverrorMessage" style="display:none;">
                            <button type="button" class="close" onclick="closeDiv();">×</button>
                            <label id="lblerrorMessage" style="float:left !important"></label>
                        </div>
                        <div class="alert alert-success" id="divMessage" style="display:none;">
                            <button type="button" class="close" onclick="closeDiv();">×</button>
                            <label id="lblMessage" style="float:left !important"></label>
                        </div>
                    </div>
                    <div class="table-responsive table--no-card m-b-30">
                        <table class="table table-borderless table-striped table-earning">
                            <thead>
                                <tr>
                                    <th>Agent/Subagent</th>
                                    <th>Employer</th>
                                    <th>Employee Code</th>
                                    <th>Employee Name</th>
                                    <th>Personal No.</th>
                                    <th>IBAN</th>
                                    <th>DOB</th>
                                    <th>Last Salary</th>
                                    <th class="text-right">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.ToList())
                                {
                                    WPS.WPSService.WPSService wps = new WPS.WPSService.WPSService();
                                    var reqcompany = wps.GetCompanyById(item.CompanyId, true);

                                    string CompanyName = ""; string AgentName = "No Agent / Blank";
                                    string Date = Convert.ToDateTime(item.DOB).ToString("MM/dd/yyyy");
                                    if (Date == "01/01/0001")
                                    {
                                        Date = "";
                                    }
                                    if (reqcompany != null)
                                    {
                                        CompanyName = reqcompany.CompanyName;
                                        if (reqcompany.SaleAccId != null)
                                        {
                                            var reqSaleAccount = wps.GetAgentById(reqcompany.SaleAccId.Value, true);
                                            if (reqSaleAccount != null)
                                            {
                                                AgentName = reqSaleAccount.SaleAccount;
                                            }
                                        }
                                    }
                                    <tr>
                                        <td>@AgentName</td>
                                        <td>@CompanyName</td>
                                        <td>@item.EmpCode</td>
                                        <td>@item.FullName</td>
                                        <td>@item.PersonalNo</td>
                                        <td>@item.IBAN</td>
                                        <td>@Date</td>
                                        <td>-</td>


                                        <td>
                                            <div class="table-data-feature">

                                                <button class="item" data-toggle="tooltip" data-placement="top" title="Edit" onclick="fancyitEmployee('@item.EmpId')">
                                                    <i class="zmdi zmdi-edit"></i>
                                                </button>
                                                <button class="item" data-toggle="modal" data-target="#myModal" data-placement="top" title="Delete" onclick="DeleteRecord('@item.EmpId')">
                                                    <i class="zmdi zmdi-delete"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
                <div class="card-footer">
                    @*<button type="submit" class="btn btn-primary btn-sm">
                            <i class="fa fa-dot-circle-o"></i> Submit
                        </button>
                        <button type="reset" class="btn btn-danger btn-sm">
                            <i class="fa fa-ban"></i> Reset
                        </button>*@
                </div>
            </div>
        </div>

    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        var msg = '@Request.QueryString["message"]';
        var newUrl = '/Employee/EmployeeIndex?q=@Request.QueryString["q"].ToString()';
        if (msg != '' && msg != '0') {
            $('#lblMessage').html(msg);
            $('#divMessage').show();
        }


        window.history.pushState("", "Employee", newUrl);
    });
</script>